[Unit]
Description=nginx exporter
After=network.target network-online.target
Requires=network-online.target

[Service]
User=root
Group=root
ExecStart=/usr/local/bin/prometheus-nginxlog-exporter -config-file /etc/nginxlog-exporter/config.hcl

TimeoutStopSec=120s
LimitNOFILE=1048576
LimitNPROC=512
PrivateTmp=false
ProtectSystem=full
AmbientCapabilities=CAP_NET_BIND_SERVICE

[Install]
WantedBy=multi-user.target